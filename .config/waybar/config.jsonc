// https://github.com/Alexays/Waybar/wiki/Configuration
{
    "width": 24,
    "reload_style_on_change": true,
    "spacing": 0,
    "position": "left",
    "output": ["DP-2"],
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-center": [],
    "modules-right": [
        "clock"
    ],
    "sway/workspaces": {
        "format": "{name}",
        "disable-scroll": true,
        "disable-click": true
    },
    "clock": {
        "format": "{:%H\n%M}"
    }
}
