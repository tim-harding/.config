(defwindow powermenu
  :monitor 0
  :stacking "fg"
  :windowtype "normal"
  :wm-ignore true
  :geometry (geometry
              :width "100%"
              :height "100%")
  (powermenu_layout))

(defwidget powermenu_layout []
  (label :text "Hello, World!"))

(defpoll time :interval "5s"
  `date +'{"hour":"%H","min":"%M"}'`)
