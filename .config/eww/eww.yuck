(defwindow powermenu
    :monitor 0
    :stacking "fg"
    :exclusive true
    :focusable false
    :windowtype "dock"
    :geometry (geometry
        :anchor "left center"
        :width "24px"
        :height "100%")
    (powermenu_layout))

(defwidget powermenu_layout []
    (label :text {time.min}))

(defpoll time :interval "5s"
    `date +'{"hour":"%H","min":"%M"}'`)
