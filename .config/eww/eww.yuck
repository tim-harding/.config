(defwindow powermenu
    :monitor 0
    :stacking "fg"
    :exclusive true
    :focusable false
    :windowtype "dock"
    :class "powermenu"
    :geometry (geometry
        :anchor "left center"
        :width "24px"
        :height "100%")
    (menu))

(defwidget menu []
    (time))

(defwidget time []
    (box :orientation "v" 
        (label :text {time.min})
        (label :text {time.hour})))

(defpoll time :interval "5s"
    `date +'{"hour":"%H","min":"%M"}'`)
