# Styling
for_window [class="^.*"] border pixel 1

# Nord colors
set $dark1 #2e3440
set $dark2 #3b4252
set $dark3 #434c5e
set $dark4 #4c566a
set $light1 #d8dee9
set $light2 #e5e9f0
set $light3 #eceff4
set $frost1 #8fbcbb
set $frost2 #88c0d0
set $frost3 #81a1c1
set $frost4 #5e81ac
set $red #bf616a
set $orange #d08770
set $yellow #ebcb8b
set $green #a3be8c
set $purple #b48ead

# class                 border  backgr. text    indicator child_border
client.focused          $frost4 $frost4 $light1 $frost4   $frost4
client.focused_inactive $dark1  $dark1  $light1 $dark1    $dark1
client.unfocused        $dark1  $dark1  $light1 $dark1    $dark1
client.urgent           $dark1  $dark1  $light1 $dark1    $dark1
client.placeholder      $dark1  $dark1  $light1 $dark1    $dark1

output $monitor1 {
  mode 1920x1080 pos 0 1080
}

output $monitor2 {
  mode 1920x1080 pos 0 0
}

input "type:keyboard" {
  repeat_delay 200
  repeat_rate 35
}
