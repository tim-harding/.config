include ~/.config/sway/hardware

set $mod Mod4

font pango:CaskaydiaCove Nerd Font 12

bindsym XF86AudioPlay exec spt playback --toggle
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPrev exec spt playback --previous
bindsym XF86AudioNext exec spt playback --next
bindsym $mod+l exec spt playback --like

floating_modifier $mod
bindsym $mod+Return exec alacritty
bindsym $mod+b exec firefox
bindsym $mod+Shift+q kill
bindsym $mod+Shift+l exec swaylock

exec swaync
bindsym $mod+Shift+n exec swaync-client -t -sw

set $grimfile ~/screenshots/$(date +'%s_grim.png')
#Screenshot region
bindsym $mod+g exec slurp | grim -g - $grimfile
# Screenshot focused window
bindsym $mod+Shift+g exec swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"' | grim -g - $grimfile
bindsym $mod+Ctrl+g exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') $grimfile

bindsym $mod+p exec tofi-drun | xargs swaymsg exec --

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+u focus parent
bindsym $mod+d focus child
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec swaymsg exit

bindsym $mod+r mode "resize"
mode "resize" {
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym $mod+r mode "default"
}

mouse_warping none
focus_follows_mouse no

for_window [class="^.*"] border pixel 2
titlebar_padding 1 1

# Catppuccin frappe colors
set $rosewater 	#f2d5cf
set $flamingo 	#eebebe
set $pink 	#f4b8e4
set $mauve 	#ca9ee6
set $red 	#e78284
set $maroon 	#ea999c
set $peach 	#ef9f76
set $yellow 	#e5c890
set $green 	#a6d189
set $teal 	#81c8be
set $sky 	#99d1db
set $sapphire 	#85c1dc
set $blue 	#8caaee
set $lavender 	#babbf1
set $text 	#c6d0f5
set $subtext1 	#b5bfe2
set $subtext0 	#a5adce
set $overlay2 	#949cbb
set $overlay1 	#838ba7
set $overlay0 	#737994
set $surface2 	#626880
set $surface1 	#51576d
set $surface0 	#414559
set $base 	#303446
set $mantle 	#292c3c
set $crust 	#232634

# class                 border    backgr.   text  indicator child_border
client.focused          $blue     $blue     $base $blue     $blue
client.focused_inactive $surface0 $surface0 $text $surface0 $surface0
client.unfocused        $base     $base     $text $base     $base
client.urgent           $base     $base     $text $base     $base
client.placeholder      $base     $base     $text $base     $base

bar {
    position bottom
    status_command while date +'%A %d %h %H:%M'; do sleep 1; done
    status_padding 0
    status_edge_padding 50
    output DP-2

    colors {
        statusline $subtext0
        background $mantle
	active_workspace $overlay0 $surface0 $text
	focused_workspace $overlay0 $surface0 $text
        inactive_workspace #00000000 #00000000 $subtext0
    }
}

input "type:keyboard" {
  repeat_delay 200
  repeat_rate 35
}

include /etc/sway/config.d/*
